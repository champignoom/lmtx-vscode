{
	"name": "context-lmtx",
	"displayName": "ConTeXt LMTX",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:lmtx"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "lmtx",
				"aliases": [
					"LMTX",
					"ConTeXt"
				],
				"extensions": [
					".lmtx"
				]
			}
		],
		"snippets": [
			{
				"language": "lmtx",
				"path": "./snippets.json"
			}
		],
		"commands": [
			{
				"command": "context-lmtx.pickfonts",
				"title": "LMTX: Pick Fonts"
			},
			{
				"command": "context-lmtx.compile",
				"title": "LMTX: Compile"
			},
			{
				"command": "context-lmtx.print-vim-filetypes",
				"title": "LMTX: Print Supported Vim File Types"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.28",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.9.7",
		"vscode-test": "^1.3.0"
	}
}
